{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend + Frontend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Markey.Server/bin/Debug/net8.0/Markey.Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Markey.Server",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch Backend Only",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Markey.Server/bin/Debug/net8.0/Markey.Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Markey.Server",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}